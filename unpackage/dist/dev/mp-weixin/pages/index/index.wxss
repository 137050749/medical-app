.contentwrapper {
  text-align: center;
  padding-bottom: 40rpx;
}
.contentwrapper .header .title {
    font-size: 36rpx;
    color: #8f8f94;
}
.contentwrapper .header .logo {
    width: 160rpx;
    height: 50rpx;
    position: fixed;
    top: 20rpx;
    left: 20rpx;
    z-index: 1000;
}
.contentwrapper .uni-padding-wrap {
    padding: 0;
}
.contentwrapper .uni-padding-wrap .page-section .page-section-spacing .swiper .swiper-item {
      width: 750rpx;
      height: 300rpx;
}
.contentwrapper .uni-padding-wrap .page-section .page-section-spacing .swiper .swiper-item .banner-img {
        width: 100%;
        overflow: hidden;
        height: 100%;
}
.contentwrapper .choose-list .list-top, .contentwrapper .choose-list .list-bottom {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    font-size: 28rpx;
    -webkit-justify-content: space-around;
        -ms-flex-pack: distribute;
            justify-content: space-around;
    margin: 40rpx 0px;
    color: #8f8f94;
}
.contentwrapper .choose-list .list-top .list-item, .contentwrapper .choose-list .list-bottom .list-item {
      border: 1px solid #ccc;
      padding: 14rpx;
      -webkit-border-radius: 8rpx;
              border-radius: 8rpx;
}
.contentwrapper .content .course-item .title {
    font-size: 32rpx;
    color: #8f8f94;
    padding: 20rpx;
    text-align: left;
}
.contentwrapper .content .course-item .boutique {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-shadow: 1px 1px 4px #ccc;
            box-shadow: 1px 1px 4px #ccc;
}
.contentwrapper .content .course-item .boutique .scroll-view_H {
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
      width: 100%;
      white-space: nowrap;
}
.contentwrapper .content .course-item .boutique .scroll-view_H .scroll-view-item_H {
        display: inline-block;
        width: 100%;
        height: 300rpx;
        text-align: center;
        font-size: 36rpx;
}
.contentwrapper .content .course-item .boutique .scroll-view_H .course-info {
        width: 300rpx;
        padding: 20rpx 0px 20rpx 20rpx;
}
.contentwrapper .content .course-item .boutique .scroll-view_H .course-info .course-img {
          width: 100%;
          height: 180rpx;
}
.contentwrapper .content .course-item .boutique .scroll-view_H .course-info .course-name {
          width: 100%;
          font-size: 24rpx;
          white-space: nowrap;
          overflow: hidden;
          -o-text-overflow: ellipsis;
             text-overflow: ellipsis;
}

